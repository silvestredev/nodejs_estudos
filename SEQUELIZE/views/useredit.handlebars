<h1>Editando: {{user.name}}</h1>
<form action="/users/update" class="form" method="POST">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Digite seu nome:</label>
        <input type="text" name="name" placeholder="Digite seu nome aqui" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Digite sua profissão:</label>
        <input type="text" name="occupation" placeholder="Digite sua profissão aqui" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </div>
        <input type="submit" value="Editar">
</form>
<div class="address-container">
    <h2>Endereços:</h2>
    <form action="/address/create" method="post">
        <input type="hidden" name="UserId" value="{{this.id}}">
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite o nome da rua aqui">
        </div>
        <div class="form-control">
            <label for="number">Número:</label>
            <input type="text" name="number" placeholder="Digite o número da residência aqui">
        </div>
        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Digite o nome da cidade aqui">
        </div>
        <input type="submit" value="Cadastrar Endereço">
    </form>
<div class="address-list">
    <h2>Lista de endereços:</h2>
    {{#each user.Addresses}}
        <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}} </p>
    {{/each}}
</div>
</div>